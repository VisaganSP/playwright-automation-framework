pipeline {
    agent any
    
    // Add NodeJS tool
    tools {
        nodejs 'Node25'  // Must match the name from Jenkins configuration
    }
    
    environment {
        BASE_URL = 'http://localhost:5173'
    }
    
    stages {
        stage('Cleanup Workspace') {
            steps {
                script {
                    echo 'üßπ Cleaning workspace...'
                    cleanWs()
                }
            }
        }
        
        stage('Checkout Code') {
            steps {
                script {
                    echo 'üì¶ Checking out code from Git...'
                    git branch: 'main', url: 'https://github.com/VisaganSP/playwright-automation-framework.git'
                }
            }
        }
        
        stage('Verify Environment') {
            steps {
                script {
                    echo 'üîç Verifying environment...'
                    sh '''
                        echo "Node version:"
                        node --version
                        echo "NPM version:"
                        npm --version
                        echo "PATH: $PATH"
                    '''
                }
            }
        }
        
        stage('Install Dependencies') {
            steps {
                script {
                    echo 'üì• Installing dependencies...'
                    sh 'npm ci'
                    
                    echo 'üåê Installing Playwright browsers...'
                    sh 'npx playwright install --with-deps'
                }
            }
        }
        
        stage('Run Tests') {
            steps {
                script {
                    echo 'üé≠ Running Playwright tests...'
                    
                    def testCommand = 'npx playwright test'
                    
                    switch(params.TEST_SUITE) {
                        case 'Smoke Tests':
                            testCommand += ' --grep @smoke'
                            break
                        case 'Critical Tests':
                            testCommand += ' --grep @critical'
                            break
                        case 'Auth Tests':
                            testCommand += ' tests/auth'
                            break
                        case 'Products Tests':
                            testCommand += ' tests/products'
                            break
                        case 'Checkout Tests':
                            testCommand += ' tests/checkout'
                            break
                    }
                    
                    if (params.BROWSER != 'all') {
                        testCommand += " --project=${params.BROWSER}"
                    }
                    
                    // Run tests (continue even if tests fail)
                    sh """
                        export HEADLESS=${params.HEADLESS}
                        export BASE_URL=http://localhost:5173
                        ${testCommand} || true
                    """
                }
            }
        }
        
        stage('Publish HTML Report') {
            steps {
                script {
                    echo 'üìä Publishing HTML report...'
                    publishHTML([
                        allowMissing: false,
                        alwaysLinkToLastBuild: true,
                        keepAll: true,
                        reportDir: 'playwright-report',
                        reportFiles: 'index.html',
                        reportName: 'Playwright Test Report',
                        reportTitles: 'Test Results'
                    ])
                }
            }
        }
    }
    
    post {
        success {
            echo '‚úÖ Build completed successfully!'
        }
        failure {
            echo '‚ùå Build failed!'
        }
        always {
            echo 'üìã Test execution completed'
        }
    }
}